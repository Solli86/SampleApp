<% provide(:title, "Sign in") %>
<div class="row">
  <div class="col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">
    <h1>Sign in</h1>
    <%= form_for(:session, url: sessions_path) do |f| %>
      <div class="input-group">
        <span class="input-group-addon">
          <span class="glyphicon glyphicon-envelope""></span>
        </span>
        <%= f.text_field :email, class: "form-control center", placeholder: :email %> 
      </div>
      <div class="input-group">
        <span class="input-group-addon">
          <span class="glyphicon glyphicon-lock"></span>
        </span>
        <%= f.password_field :password, class: "form-control center", placeholder: "password" %> 
      </div>
      <%= f.submit "Sign in", class: "btn btn-large btn-primary pull-left" %>
      <p class="pull-right">New user? <%= link_to "Sign up now!", signup_path %></p>
    <% end %>
  </div>
</div>
