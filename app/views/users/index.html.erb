<% provide(:title, 'All users') %>
<div class="row">
  <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1 col-xs-12">

    <h1 class="text-center" >All users</h1>
    <ul class="users-list">
    <% @users.each do |user| %>
      <li>
        <%= gravatar_for user, size: 160  %>
        <% #TODO use block version link_to %>
        <span class="user-link"><%= link_to user.name, user %></span>
      </li>
    <% end %>
    </ul>
    </div>
</div>
